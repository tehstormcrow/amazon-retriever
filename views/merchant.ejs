<% include ./partials/header.ejs %>
<div class="container">
<div class="form-container form-container-fullwidth">
  <div class="form-row form-head">
    <div class="form-table-item-sku">
      SKU
    </div>
    <div class="form-table-item-big">
      order-id
    </div>
    <div class="form-table-item-big">
      date
    </div>
    <div class="form-table-item-small">
      m-customer
    </div>
    <div class="form-table-filler"> </div>
  </div>

  <form action="/merchant?_method=PUT" method="POST">
    <% var line = 0 %>
    <% orders.forEach(function(order) { %>
        <% line += 1 %>
        <div <% if (line % 2 == 0) { %>
          class="form-row form-odd">
        <% } else { %>
          class="form-row">
        <% } %>
          <div class="form-table-item-sku">
            <%= order.SKU %>
          </div>
          <div class="form-table-item-big">
            <%= order["amazon-order-id"] %>
          </div>
          <div class="form-table-item-big">
            <%= order["purchase-date"] %>
          </div>
          <div class="form-table-item-small">
            <input onchange="inputChangeHandler(this)" type="number" step="0.01" class="form-control"  name="<%=
            order['amazon-order-id']%>/<%= order.SKU %>" placeholder="<%= order['m-customer'] %>">
          </div>
        </div>
      <% }); %>
      <button class="btn btn-success" type="submit">Apply Changes</button>
  </form>

</div>
</div>
  <% include ./partials/footer.ejs %>
